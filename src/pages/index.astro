    { name: "Java", icon: "./assets/java.png", type: "custom" },
    { name: "JavaScript", icon: "javascript", type: "simple" },
    { name: "Dart", icon: "dart", type: "simple" },
    { name: "HTML", icon: "html5", type: "simple" },
    { name: "CSS", icon: "./assets/css.png", type: "custom" },
    { name: "C++", icon: "cplusplus", type: "simple" },
    { name: "SQL", icon: "mysql", type: "simple" },
    { name: "R", icon: "r", type: "simple" },
  ],
  frameworks: [
    { name: "React", icon: "react", type: "simple" },
    { name: "Astro", icon: "astro", type: "simple" },
    { name: "Flutter", icon: "flutter", type: "simple" },
    { name: "Streamlit", icon: "streamlit", type: "simple" },
    { name: "OpenCV", icon: "opencv", type: "simple" },
    { name: "Tailwind CSS", icon: "tailwindcss", type: "simple" },
    { name: "Node.js", icon: "nodedotjs", type: "simple" },
    { name: "Express.js", icon: "express", type: "simple" },
    { name: "Flask", icon: "flask", type: "simple" },
    { name: "FastAPI", icon: "fastapi", type: "simple" }
  ],
  tools: [
    { name: "Git", icon: "git", type: "simple" },
    { name: "VS Code", icon: "./assets/vscode.png", type: "custom" },
    { name: "Figma", icon: "figma", type: "simple" },
    { name: "Netlify", icon: "netlify", type: "simple" },
    { name: "MySQL", icon: "mysql", type: "simple" },
    { name: "MongoDB", icon: "mongodb", type: "simple" },
    { name: "Redis", icon: "redis", type: "simple" },
    { name: "Jupyter Notebook", icon: "jupyter", type: "simple" },
